<div class="panel">
  <div class="panel-row">
    <div>
      <h3 style="margin:0 0 6px 0"><%= campaign.title %></h3>
      <div class="muted">ID: <%= campaign.id %> • Preço: R$ <%= Number(campaign.ticket_price).toFixed(2) %> • Total: <%= campaign.total_tickets %> • Sorteio: <%= campaign.draw_date ? new Date(campaign.draw_date).toLocaleString() : '-' %></div>
    </div>
    <div class="actions">
      <form method="post" action="/admin-ui/campaigns/<%= campaign.id %>/reserve" class="inline">
        <input name="ticket_number" placeholder="Número ex. 012" required />
        <input name="minutes" type="number" min="1" value="60" />
        <button class="btn" type="submit">Reservar</button>
      </form>
      <form method="post" action="/admin-ui/campaigns/<%= campaign.id %>/release" class="inline">
        <input name="ticket_number" placeholder="Número ex. 012" required />
        <button class="btn ghost" type="submit">Liberar</button>
      </form>
      <form method="post" action="/admin-ui/campaigns/<%= campaign.id %>/sell" class="inline">
        <input name="ticket_number" placeholder="Número ex. 050" required />
        <input name="customer_name" placeholder="Cliente" />
       <input name="customer_phone" placeholder="Telefone" />
        <button class="btn ok" type="submit">Vender</button>
      </form>
      <a class="btn" href="/admin-ui">Voltar</a>
    </div>
  </div>

  <% if (campaign.status === 'expired') { %>
    <div class="alert">Campanha expirada. Números bloqueados para compra.</div>
  <% } %>

  <div class="grid-numbers">
    <% if (Array.isArray(numbers) && numbers.length) { %>
      <% numbers.forEach(n => { %>
        <div class="num <%= n.status %>">
          <div style="font-weight:700"><%= n.ticket_number %></div>
          <div class="muted" style="font-size:12px"><%= n.status %><% if(n.reserved_until){ %> até <%= new Date(n.reserved_until).toLocaleTimeString() %><% } %></div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="muted">Nenhum número gerado ainda.</div>
    <% } %>
  </div>
</div>
