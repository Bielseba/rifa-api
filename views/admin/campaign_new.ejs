<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Nova Campanha' %></title>
  <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body>
  <header class="admin-header">
    <h1>Painel Admin</h1>
    <nav>
      <a href="/admin-ui">Dashboard</a>
      <a href="/admin-ui/campaigns/new" class="active">Nova Campanha</a>
      <form method="post" action="/admin-ui/logout" style="display:inline;">
        <button type="submit" class="logout-btn">Sair</button>
      </form>
    </nav>
  </header>

  <main class="admin-main">
    <section class="form-section">
      <h2>Criar Nova Campanha</h2>
      <% if (error) { %>
        <div class="alert"><%= error %></div>
      <% } %>

      <form class="form" method="post" action="/admin-ui/campaigns/new">
        <div class="grid">
          <div>
            <label>Título</label>
            <input name="title" required />
          </div>
          <div>
            <label>Imagem (URL)</label>
            <input name="image_url" />
          </div>
          <div>
            <label>Status</label>
            <select name="status">
              <option value="active">Ativa</option>
              <option value="finished">Finalizada</option>
              <option value="upcoming">Em breve</option>
            </select>
          </div>
          <div>
            <label>Preço por número</label>
            <input name="ticket_price" type="number" step="0.01" required />
          </div>
          <div>
            <label>Total de números</label>
            <input name="total_tickets" type="number" required />
          </div>
          <div>
            <label>Data do sorteio</label>
            <input name="draw_date" type="datetime-local" />
          </div>
        </div>

        <fieldset class="mt">
          <label><input type="checkbox" name="auto_generate" value="on" /> Gerar números automaticamente</label>
          <div class="inline">
            <label>Dígitos</label>
            <input name="digits" type="number" min="2" max="6" value="3" />
          </div>
        </fieldset>

        <div class="actions">
          <button class="btn" type="submit">Criar campanha</button>
        </div>
      </form>
    </section>
  </main>

  <footer class="admin-footer">
    <p>&copy; <%= new Date().getFullYear() %> Painel de Rifas</p>
  </footer>
</body>
</html>
